unit: heritage/catfolk/remaster/liminal
in: heritage/catfolk
group: "_{Player Core}"
name: "_{Liminal Catfolk}"
# enabled: false

inc:
  # set the heritage name
  - set: heritage
    value: "_{Liminal Catfolk}"

  # create the heritage text block
  - at: '@heritage'
    replace:
      - article:
        title: "_{Liminal Catfolk}"
        contents:
          # simple description
          - p: "_{Detect Magic at will.}"
          - value-block: "+1"
            content: "_{Occultism checks to Recall Knowledge about creatures from outside the Material Plane}"

  - at: '@actions'
    add:
      - action: 2
        contents:
          - p:
            title: "_{Detect Magic}"
            content: "_{Identify the presence of magic.}"
