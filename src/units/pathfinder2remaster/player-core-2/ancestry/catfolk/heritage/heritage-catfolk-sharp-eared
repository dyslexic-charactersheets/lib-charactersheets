unit: heritage/<ancestry>/remaster/<heritage>
in: heritage/<ancestry>
group: "_{Player Core}"
name: "_{<heritage> <ancestry>}"
# enabled: false

inc:
  # set the heritage name
  - set: heritage
    value: "_{<heritage> <ancestry>}"

  # create the heritage text block
  - at: '@heritage'
    replace:
      - article:
        title: "_{<heritage> <ancestry>}"
        contents:
          # simple description
          - value-block: "+2"
            content: "_{Listen to locate undetected creatures within 30ft}"
          - action: free
            contents:
              - p: "_{Point out a creature you're aware of once per round}"

  # add a free action
  - at: '@actions'
    add:
      - action: free
        contents:
          - p: "_{Point out a creature you're aware of once per round}"
